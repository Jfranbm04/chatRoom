{% extends 'base.html.twig' %}

{% block title %}Hello chatGroup!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="/main">Volver</a>  
    {# Lista de mensajes #}
    <div class="messages-container">
        <h1> {{chatGroup.name}} </h1>
        <a href="/chat/group/cerrarChat/{{ chatGroup.id }}">Dejar de participar en el chat</a>
        <hr />
        {% for message in messages %}
            <div class="message">
                <span class="username">{{ message.user.getUsername }}</span>: 
                <span class="content">{{ message.content }}</span>
                <span class="date">{{ message.date|date('d-m-Y H:i') }}</span>
            </div>
        {% endfor %}
        <form action="/chat/group/newMessage" method="POST">
            <input type="text" name="content" placeholder="Escribe un mensaje">
            <input type="hidden" name="chatGroupId" value="{{ chatGroup.id }}">
            <button type="submit">Enviar</button>
        </form>
        {# {% for message in messages %}
